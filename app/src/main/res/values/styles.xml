<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 按钮样式 -->
    <style name="BaseButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">@dimen/dp18</item>
        <item name="android:textColor">@color/text_whitecolor</item>
    </style>

    <style name="RedButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/login_btn_shape_selector</item>
    </style>
</resources>
